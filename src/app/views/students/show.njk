{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{student.avatar_url}}) no-repeat center center / cover"></section>

        <section class="details">

            <h3>Detalhes</h3>

            <div class="item">
                <div>Aluno</div>
                <div>{{student.name}}</div>
            </div>

            <div class="item">
                <div>Aniversário</div>
                <div>{{student.birth_date}}</div>
            </div>

            <div class="item">
                <div>Email</div>
                <div>{{student.email}}</div>
            </div>

            <div class="item">
                <div>Ano escolar</div>
                <div>{{student.schoolYear}}</div>
            </div>

            <div class="item">
                <div>Carga horária semanal</div>
                <div>{{student.weeklyWorkload}}
                    horas</div>
            </div>

            <div class="buttons">
                <a href="/students/{{student.id}}/edit" class="button">Editar</a>
                <form id="form-delete" action="/students?_method=DELETE" method="post">
                    <input type="hidden" name="id" value="{{student.id}}">

                    <button type="submit" class="button">Deletar</button>
                </form>
            </div>
        </section>
    </div>

    {% include "confirm.njk" %}

{% endblock content %}