<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://..." value="{{student.avatar_url}}">
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input type="text" name="name" placeholder="Nome completo do aluno" value="{{student.name}}">
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div>
        <input type="email" name="email" placeholder="Email do aluno" value="{{student.email}}">
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth_date" value="{{student.birth_date}}">
    </div>
</div>

<div class="item">
    <div>Ano escolar</div>
    <div>
        <select name="school_year">
            <option value="5EF" {% if student.school_year == "5EF" %} selected="selected" {% endif %}>5° ano Fundamental</option>
            <option value="6EF" {% if student.school_year == "6EF" %} selected="selected" {% endif %}>6° ano Fundamental</option>
            <option value="7EF" {% if student.school_year == "7EF" %} selected="selected" {% endif %}>7° ano Fundamental</option>
            <option value="8EF" {% if student.school_year == "8EF" %} selected="selected" {% endif %}>8° ano Fundamental</option>
            <option value="9EF" {% if student.school_year == "9EF" %} selected="selected" {% endif %}>9° ano Fundamental</option>
            <option value="1EM" {% if student.school_year == "1EM" %} selected="selected" {% endif %}>1° ano Médio</option>
            <option value="2EM" {% if student.school_year == "2EM" %} selected="selected" {% endif %}>2° ano Médio</option>
            <option value="3EM" {% if student.school_year == "3EM" %} selected="selected" {% endif %}>3° ano Médio</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Carga horária semanal</div>
    <div>
        <input type="number" name="weekly_workload" value="{{student.weekly_workload}}">
    </div>
</div>

<button type="submit">Salvar</button>