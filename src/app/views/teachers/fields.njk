<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://..." value="{{teacher.avatar_url}}">
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input type="text" name="name" placeholder="Nome completo do professor" value="{{teacher.name}}">
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{teacher.birth}}">
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="graduation">
            <option value="highSchool" {% if teacher.graduation == "highSchool" %} selected {% endif %}>Ensino Médio Completo</option>
            <option value="university" {% if teacher.graduation == "university" %} selected {% endif %}>Ensino Superior Completo</option>
            <option value="master" {% if teacher.graduation == "master" %} selected {% endif %}>Mestrado</option>
            <option value="doctorate" {% if teacher.graduation == "doctorate" %} selected {% endif %}>Doutorado</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span><input type="radio" name="class_type" value="presential" {% if teacher.class_type == "presential" %} checked {% endif %}>
            Presencial</span>
        <span><input type="radio" name="class_type" value="remotely" {% if teacher.class_type == "remotely" %} checked {% endif %}>À distância</span>
    </div>
</div>

<div class="item">
    <div>Área de atuação</div>
    <div>
        <input type="text" name="acting" value="{{teacher.acting}}">
    </div>
</div>

<button type="submit">Salvar</button>