<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://..." value="{{teacher.avatar_url}}">
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input type="text" name="name" placeholder="Nome completo do professor" value="{{teacher.name}}">
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth_date" value="{{teacher.birth_date}}">
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="education_level">
            <option value="highSchool" {% if teacher.education_level == "highSchool" %} selected {% endif %}>Ensino Médio Completo</option>
            <option value="university" {% if teacher.education_level == "university" %} selected {% endif %}>Ensino Superior Completo</option>
            <option value="master" {% if teacher.education_level == "master" %} selected {% endif %}>Mestrado</option>
            <option value="doctorate" {% if teacher.education_level == "doctorate" %} selected {% endif %}>Doutorado</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span><input type="radio" name="class_type" value="presential" {% if teacher.class_type == "presential" %} checked {% endif %}>
            Presencial</span>
        <span><input type="radio" name="class_type" value="remotely" {% if teacher.class_type == "remotely" %} checked {% endif %}>À distância</span>
    </div>
</div>

<div class="item">
    <div>Área de atuação</div>
    <div>
        <input type="text" name="subjects_taugh" value="{{teacher.subjects_taugh}}">
    </div>
</div>

<button type="submit">Salvar</button>