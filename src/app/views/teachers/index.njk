{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <div class="header">
            <a class="button" href="/teachers/create">Novo</a>
            <form action="/teachers" method="get">
                <input type="text" name="filter" placeholder="Nome ou Área de Atuação" value="{{filter}}">
                <button type="submit">Filtrar</button>
            </form>
        </div>
        <table width="100%">
            <thead>
                <tr>
                    <th>Nome completo</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td>
                            <span style="background-image: url({{teacher.avatar_url}})"></span>
                            {{teacher.name}}
                        </td>
                        <td class="services">
                            {% for subject in teacher.subjects_taugh %}
                                <span>{{subject}}</span>
                            {% endfor %}
                        </td>
                        <td>
                            <a href="/teachers/{{teacher.id}}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock content %}